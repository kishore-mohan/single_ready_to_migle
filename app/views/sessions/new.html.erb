<fieldset>
  <legend>Login</legend>

  <%= form_for @session do |f| %>
      <% @session.errors.full_messages.each do |msg| %>
          <p><%= msg %></p>
      <% end %>

      <label for="session_name">email</label><br />
      <%= f.text_field :email %><br />

      <label for="session_password">Password</label><br />
      <%= f.password_field :password %><br />

      <%= submit_tag "login" %>

  <% end %>

</fieldset>
